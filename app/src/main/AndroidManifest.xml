<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.game_stash">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Game_stash">
        <activity android:name=".VErrorPage" android:parentActivityName=".VMainMenu"/>
        <activity android:name=".VProfile" android:parentActivityName=".VMainMenu"/>
        <activity android:name=".VAPIGameDetails" android:parentActivityName=".VMainMenu"/>
        <activity
            android:name=".VAPISearchResults"
            android:label="@string/title_activity_search_results"
            android:theme="@style/Theme.Game_stash.NoActionBar" />
        <activity android:name=".VGameDisplay" android:parentActivityName=".VMainMenu"/>
        <activity android:name=".VAddGameManually" android:parentActivityName=".VMainMenu"/>
        <activity android:name=".VAddGameSearch" android:parentActivityName=".VMainMenu"/>
        <activity android:name=".VGameEditor" android:parentActivityName=".VMainMenu"/>
        <activity
            android:name=".VEditGamesList"
            android:label="@string/title_activity_edit_games_list"
            android:theme="@style/Theme.Game_stash.NoActionBar"
            android:parentActivityName=".VMainMenu" />
        <activity
            android:name=".VUsersListOfGames"
            android:label="@string/title_activity_users_list_of_games"
            android:theme="@style/Theme.Game_stash.NoActionBar"
            android:parentActivityName=".VMainMenu" />
        <activity
            android:name=".VMainMenu"
            android:label="@string/app_name"
            android:theme="@style/Theme.Game_stash.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>